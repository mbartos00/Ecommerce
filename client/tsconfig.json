{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@environments/*": ["./src/environments/*"],
      "@spartan-ng/ui-input-helm": [
        "./src/app/shared/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        "./src/app/shared/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./src/app/shared/ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./src/app/shared/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./src/app/shared/ui/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sheet-helm": [
        "./src/app/shared/ui/ui-sheet-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [
        "./src/app/shared/ui/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/ui-sonner-helm": [
        "./src/app/shared/ui/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-pagination-helm": [
        "./src/app/shared/ui/ui-pagination-helm/src/index.ts"
      ],
      "@spartan-ng/ui-select-helm": [
        "./src/app/shared/ui/ui-select-helm/src/index.ts"
      ],
      "@prisma/client": ["../server/node_modules/@prisma/client"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
